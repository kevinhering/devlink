{
  "name": "devlink",
  "version": "1.0.0",
  "description": "knowledge sharing tool for development teams",
  "main": "server.js",
  "engines": {
    "node": "10.5.0"
  },
  "scripts": {
    "start": "node server.js",
    "client-start": "npm start --prefix client",
    "client-install": "npm install --prefix client",
    "dev": "concurrently \"npm run dev-server\" \"npm run client-start\"",
    "dev-server": "nodemon server.js",
    "test": "jest",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "author": "Kevin Hering",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^5.0.1",
    "express": "^4.16.4",
    "gravatar": "^1.8.0",
    "jsonwebtoken": "^8.4.0",
    "lodash": "^4.17.11",
    "mongoose": "^5.3.14",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "validator": "^10.9.0"
  },
  "devDependencies": {
    "concurrently": "^3.6.1",
    "jest": "^23.6.0",
    "nodemon": "^1.18.7",
    "puppeteer": "^1.11.0",
    "supertest": "^3.3.0"
  },
  "jest": {
    "testURL": "http://localhost/"
  }
}
